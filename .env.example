# ELIDA Environment Variables Example
# Copy this to .env and fill in your values

# API Keys for backends (optional - can also use headers)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
MISTRAL_API_KEY=

# TLS Configuration (for HTTPS)
# ELIDA_TLS_ENABLED=true
# ELIDA_TLS_CERT_FILE=/path/to/cert.pem
# ELIDA_TLS_KEY_FILE=/path/to/key.pem
# ELIDA_TLS_AUTO_CERT=true  # Development only

# Redis (for horizontal scaling)
# ELIDA_SESSION_STORE=redis
# ELIDA_REDIS_ADDR=localhost:6379
# ELIDA_REDIS_PASSWORD=

# Telemetry (OpenTelemetry)
# ELIDA_TELEMETRY_ENABLED=true
# ELIDA_TELEMETRY_EXPORTER=otlp
# ELIDA_TELEMETRY_ENDPOINT=localhost:4317

# Storage (SQLite for dashboard history)
# ELIDA_STORAGE_ENABLED=true
# ELIDA_STORAGE_PATH=data/elida.db

# Policy engine (for flagging suspicious sessions)
# ELIDA_POLICY_ENABLED=true
